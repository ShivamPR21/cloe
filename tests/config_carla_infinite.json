{
  "version": "4",
  "include": [
    "controller_virtue.json",
    "controller_basic.json"
  ],
  "defaults": {
    "controllers": [
      {
        "binding": "virtue",
        "args": {
          "lane_sensor_components": [
            "cloe::default_lane_sensor"
          ]
        }
      }
    ]
  },
  "simulators": [
    {
      "binding": "carla",
      "args": {
        "vehicles": [
          {
            "name": "abc",
            "id": "cybertruck"
          },
          {
            "name": "xyz",
            "id": "cybertruck"
          }
        ]
      }
    }
  ],
  "vehicles": [
    {
      "name": "default",
      "from": {
        "simulator": "carla",
        "index": 0
      },
      "components": {
        "cloe::speedometer": {
          "binding": "speedometer",
          "name": "default_speed",
          "from": "cloe::gndtruth_ego_sensor"
        }
      }
    }
  ],
  "logging": [
    {
      "name": "cloe/carla/signs",
      "level": "error"
    }
  ]
}
