{
  "version": "4",
  "include": [
    "config_carla_infinite.json"
  ],
  "server": {
    "listen": false,
    "listen_port": 23456
  },
  "defaults": {
    "simulators": [
      {
        "binding": "carla",
        "args": {
          "connection": {
            "host": "127.0.0.1",
            "port": 2000
          }
        }
      }
    ]
  },
  "triggers": [
    {
      "event": "virtue/failure",
      "action": "fail"
    },
    {
      "event": "start",
      "action": "log=info: Running vtd/basic smoketest."
    },
    {
      "event": "start",
      "action": "realtime_factor=-1"
    },
    {
      "label": "Vehicle default should not reach 50 km/h with the vtd binding and basic controller.",
      "event": "default_speed/kmph=>50.0",
      "action": "fail"
    },
    {
      "event": "time=60",
      "action": "succeed"
    }
  ]
}